<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import java.net.URL?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" xmlns="http://javafx.com/javafx/8.0.172-ea"
            fitToHeight="true" fitToWidth="true">
	<stylesheets>
		<URL value="@main.css"/>
		<URL value="@table-view.css"/>
	</stylesheets>
	<VBox fx:id="content">
		<MenuBar>
			<Menu text="Add">
				<MenuItem text="Mods" onAction="#newMods"/>
			</Menu>
			<Menu text="View">
				<MenuItem text="Bad Jars" fx:id="badJars" onAction="#showBadJars"/>
				<MenuItem text="Updates" onAction="#searchForUpdates"/>
			</Menu>
			<Menu text="Save">
				<MenuItem text="Columns" onAction="#setColumns"/>
				<MenuItem text="Link Ids" onAction="#setJarIds"/>
			</Menu>
		</MenuBar>
		<GridPane fx:id="listGrid" prefWidth="${root.width}">
			<WebView fx:id="objectView" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
			<columnConstraints>
				<ColumnConstraints hgrow="ALWAYS"/>
				<ColumnConstraints hgrow="NEVER" minWidth="4.0"/>
				<ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" percentWidth="40.0"/>
			</columnConstraints>
			<rowConstraints>
				<RowConstraints vgrow="ALWAYS"/>
			</rowConstraints>
		</GridPane>
	</VBox>
</ScrollPane>
